<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DMapp.View.GeneralResultsPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Right" Command="{Binding BackCommand}"/>
                <SwipeGestureRecognizer Direction="Left" Command="{Binding DetailsCommand}"/>
            </StackLayout.GestureRecognizers>
            <Button Text="End" Command="{Binding EndCommand}" WidthRequest="100" HeightRequest="100" />
            <Button Text="Details" Command="{Binding DetailsCommand}" WidthRequest="100" HeightRequest="100" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>